<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/store_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/store_image"
            android:layout_width="0dp"
            android:layout_height="160dp"
            app:layout_constraintStart_toStartOf="@id/store_name"
            app:layout_constraintTop_toBottomOf="@id/store_name"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/store_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:text="@string/store_charge"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/store_image"
            app:layout_constraintTop_toBottomOf="@+id/store_image" />

        <TextView
            android:id="@+id/store_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/store_genre"
            app:layout_constraintBottom_toBottomOf="@+id/store_price"
            app:layout_constraintStart_toStartOf="@+id/store_name"
            app:layout_constraintTop_toTopOf="@+id/store_price" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
